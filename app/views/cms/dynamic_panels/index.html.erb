<% breadcrumb :cms_dynamic_panels %>
<h1 class="cms-header"><i class="material-icons">star_rate</i>Dynamic Panels for <%= dynamic_page.title %></h1>
<% if dynamic_panels.any? %>
  <%= link_to 'Create Dynamic Panel', new_cms_dynamic_page_dynamic_panel_path(dynamic_page), class: 'btn btn-dark' %>
  <table class="table table-striped table-responsive">
    <thead class="table-inverse">
      <th> &nbsp;</th>
      <th> Title</th>
      <th> Headline </th>
      <% if dynamic_page.title == 'Home'%>
        <th> </th>
      <% else %>
        <th> Anchor </th>
      <% end %>
      <th> Dynamic Panel Type </th>
      <th> Enquiry Link </th>
      <th colspan=3> Actions</th>
    </thead>
    <tbody id='index_rows'>
      <%= render "cms/dynamic_panels/partials/index_rows" %>
    </tbody>
</table>
<% else %>
  <div>There are no Dynamic Panels on the system for <%= dynamic_page.title %>. Why not add one <%= link_to 'here?', new_cms_dynamic_page_dynamic_panel_path(dynamic_page) %></div>
<% end %>
